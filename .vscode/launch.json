// A launch configuration that compiles the extension and then opens it inside a new window
{
	"version": "0.1.0",
	"configurations": [
		{
			"name": "Launch Extension (Webpack)",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"env": {
				"DEBUGTELEMETRY": "1"
			},
			"stopOnEntry": false,
			"sourceMaps": true,
			"outFiles": [
				"${workspaceFolder}/../dist/**/*.js"
			],
			"preLaunchTask": "npm: webpack"
		},
		{
			"name": "Launch Tests",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"${workspaceFolder}/test/test.code-workspace",
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionTestsPath=${workspaceFolder}/dist/test"
			],
			"stopOnEntry": false,
			"sourceMaps": true,
			"outFiles": [
				"${workspaceFolder}/../dist/test/**/*.js"
			],
			"preLaunchTask": "npm: webpack",
			"env": {
				"MOCHA_grep": "", // RegExp of tests to run (empty for all)
				"MOCHA_enableTimeouts": "0", // Disable time-outs
				"DEBUGTELEMETRY": "1",
				"NODE_DEBUG": ""
			}
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Attach to Language Server",
			"protocol": "inspector",
			"port": 6009,
			"sourceMaps": true,
			"outFiles": [
				"${workspaceRoot}/out/**/*.js"
			]
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Attach to Language Server (Webpack)",
			"protocol": "inspector",
			"port": 6009,
			"sourceMaps": true,
			"timeout": 20000,
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			]
		}
	]
}
